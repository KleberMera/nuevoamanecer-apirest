generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Usuario {
  id            Int        @id @default(autoincrement())
  nombre1       String
  nombre2       String?
  apellido1     String
  apellido2     String?
  telefono      String     @db.VarChar(10)
  nombreUsuario String     @unique
  email         String?    @unique
  cedula        String     @unique @db.VarChar(10)
  password      String
  rolId         Int
  estado        String?    @default("A")
  rol           Rol        @relation(fields: [rolId], references: [id])
  acciones      Accion[]
  prestamos     Prestamo[]
  createdAt     DateTime   @default(now())
  updatedAt     DateTime?  @updatedAt
}

model Rol {
  id          Int       @id @default(autoincrement())
  nombre      String    @unique
  descripcion String?
  estado      String?   @default("A")
  usuarios    Usuario[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime? @updatedAt
}

model Accion {
  id        Int       @id @default(autoincrement())
  usuarioId Int
  usuario   Usuario   @relation(fields: [usuarioId], references: [id])
  periodo   String
  numero    Int
  valor     Int
  acumulado Int?
  fecha     DateTime
  estado    String?   @default("A")
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
}

model Prestamo {
  id         Int               @id @default(autoincrement())
  usuarioId  Int
  usuario    Usuario           @relation(fields: [usuarioId], references: [id])
  numSolicitud Int?
  periodo   String?
  monto      Int
  interes    Float
  cuotas     Int
  fecha      DateTime
  frecuencia String            @default("MENSUAL")
  estado     String?           @default("A")
  createdAt  DateTime          @default(now())
  updatedAt  DateTime?         @updatedAt
  detalles   DetallePrestamo[]
}

model DetallePrestamo {
  id         Int       @id @default(autoincrement())
  prestamoId Int
  prestamo   Prestamo  @relation(fields: [prestamoId], references: [id])
  fecha  DateTime?
  cuotaNum   Int
  interes    Float
  capital    Float
  saldo      Float
  fechaPago  DateTime?
  periodoPago String?
  estadoPago String?   @default("PENDIENTE")
  createdAt  DateTime  @default(now())
  updatedAt  DateTime? @updatedAt
}
